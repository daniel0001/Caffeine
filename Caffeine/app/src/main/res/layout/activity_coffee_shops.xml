<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coffee_shops"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="practice.Caffeine.CoffeeShopsActivity">
    <Button
        android:id="@+id/bAddShop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/greenButton"
        android:text="@string/plus_sign"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/tvCoffeeShopsTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/bAddShop"
        android:paddingTop="10dp"
        android:text="@string/shop_stamps"
        android:textSize="20sp" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvCoffeeShopsTitle"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/tvShop1"
        android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
