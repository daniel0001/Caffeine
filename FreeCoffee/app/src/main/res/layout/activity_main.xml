<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="mycompany.freecoffee.MainActivity"

    android:background="@drawable/backgroundcoffee2">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/googlelogin"
        android:id="@+id/imageButton1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_marginBottom="32dp" />

    <ImageButton

        android:background="@drawable/facebooklogin"
        android:id="@+id/imageButton3"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_above="@+id/imageButton1"
        android:layout_alignLeft="@+id/editTextPass"
        android:layout_alignStart="@+id/editTextPass"
        android:layout_marginBottom="18dp" />

    <Button
        android:text="Login / Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginSignUpButton"
        android:layout_above="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorTextFieldBackground"
        android:inputType="textPassword"
        android:hint="@string/prompt_password"
        android:ems="10"
        android:id="@+id/editTextPass"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="serif"
        android:layout_above="@+id/loginSignUpButton"
        android:layout_alignLeft="@+id/editTextEmailLogin"
        android:layout_alignStart="@+id/editTextEmailLogin"
        android:layout_marginBottom="16dp" />

    <EditText
        android:hint="@string/prompt_email"
        android:background="@color/colorTextFieldBackground"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmailLogin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="serif"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/freecoffeelink"
        android:layout_marginTop="27dp"
        android:id="@+id/freeCoffeeSiteAddress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
